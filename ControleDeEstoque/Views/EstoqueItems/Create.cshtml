@model ControleDeEstoque.Models.EstoqueItem

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1>Criar Novo Produto</h1>

    <hr />
    <div class="row">
        <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group">
                    <label asp-for="CodigoProduto" class="control-label"></label>
                    <input asp-for="CodigoProduto" class="form-control" />
                    <span asp-validation-for="CodigoProduto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantidade" class="control-label"></label>
                    <input asp-for="Quantidade" class="form-control" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrecoUnitario" class="control-label"></label>
                    <input asp-for="PrecoUnitario" class="form-control" />
                    <span asp-validation-for="PrecoUnitario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataEntrada" class="control-label"></label>
                    <input asp-for="DataEntrada" class="form-control" />
                    <span asp-validation-for="DataEntrada" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input style="margin-top: 10px" type="submit" value="Criar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index">Voltar Para a Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
