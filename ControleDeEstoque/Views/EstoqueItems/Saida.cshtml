@model ControleDeEstoque.Models.EstoqueItem

<h2>Saída de Estoque</h2>

<div>
    <h4>@Model.Nome</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Descrição</dt>
        <dd>@Model.Descricao</dd>
        <dt>Quantidade Atual</dt>
        <dd>@Model.Quantidade</dd>
        <dt>Preço Unitário</dt>
        <dd>@Model.PrecoUnitario</dd>
    </dl>
</div>

<form asp-action="Saida">
    <div class="form-group">
        <label for="quantidade">Quantidade a Remover:</label>
        <input type="number" name="quantidade" id="quantidade" class="form-control" min="1" max="@Model.Quantidade" required />
    </div>

    <div class="form-group">
        <label for="colaboradorId">Colaborador:</label>
        <select name="colaboradorId" id="colaboradorId" class="form-control" required>
            <option value="">Selecione um colaborador</option>
            @foreach (var colaborador in ViewBag.Colaboradores)
            {
                <option value="@colaborador.Value">@colaborador.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="status">Status da Operação:</label>
        <select name="status" id="status" class="form-control" required>
            <option value="Pendente">Pendente</option>
            <option value="Finalizado">Finalizado</option>
        </select>
    </div>

    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Remover do Estoque</button>
</form>
<p>
    <a asp-action="Index">Voltar Para a Lista</a>
</p>